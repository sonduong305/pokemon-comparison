{
  "name": "pokemon-comparison",
  "version": "1.0.0",
  "description": "A web application to compare Pokemon sizes",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "python3 -m http.server 8000"
  },
  "keywords": ["pokemon", "comparison", "size", "pokeapi"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "type": "module",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/app.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}